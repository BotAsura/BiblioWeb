@model List<TbLibro>
@{
    Layout = null;    
}

<!DOCTYPE html>
<html lang="esp">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BIBLIOWEB</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/project.css">
    <script src="https://kit.fontawesome.com/2c36e9b7b1.js"></script>
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
    <script src="https://kit.fontawesome.com/2c36e9b7b1.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">
</head>
<body>

<!--BARRA DE NAVEGACION-->   
<nav>
    <input type="checkbox" id="check">
    <label for="check" class="checkbtn">
        <i class="fas fa-bars"></i>
    </label>
    <label class="logo"><ion-icon name="book"></ion-icon>BiblioWeb</label>
    <ul>
        <li><a asp-action="Menu" class="active text-decoration-none navA"><ion-icon name="grid"></ion-icon>Inicio</a></li>
        <li><a asp-action="Carrito" class="text-decoration-none navA"><ion-icon name="cart"></ion-icon>Carrito</a></li>
        <li><a asp-action="Vender" class="text-decoration-none navA"><ion-icon name="pricetags"></ion-icon>Vender</a></li>
        <li><a asp-action="UserConfig" class="text-decoration-none navA"><ion-icon name="person"></ion-icon>@ViewBag.Usuario</a></li>
        <li><a asp-action="Logout" class="text-decoration-none navA"><ion-icon name="exit"></ion-icon>Salir Sesion</a></li>
    </ul>
</nav>

<!--CARRUSEL DE IMAGENES-->
<div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" cursive-current="true" cursive-label="Slide 1"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" cursive-label="Slide 2"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" cursive-label="Slide 3"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="3" cursive-label="Slide 4"></button>
    </div>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <a href="/img/AVANCE 2 PA BIBLIOWEB.docx.pdf"><img src="~/img/bgQR.jpg" class="d-block w-100" alt="banIntr"></a>
        </div>
        <div class="carousel-item">
            <a asp-action="Introduccion" asp-controller="Static"><img src="~/img/bgIntroduction.png" class="d-block w-100" alt="banIntr"></a>
        </div>
        <div class="carousel-item">
            <a asp-action="Nosotros" asp-controller="Static"><img src="~/img/bgNosotros.png" class="d-block w-100" alt="banNos"></a>
        </div>
        <div class="carousel-item">
            <a asp-action="Agradecimientos" asp-controller="Static"><img src="~/img/bgAgr.png" class="d-block w-100" alt="banAgr"></a>
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" cursive-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
        <span class="carousel-control-next-icon" cursive-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>    
    <br><br><br>
<!--PAGINA-->
<div class="container">
    <div class="row">        
        <form class="d-flex" asp-action="Menu" asp-controller="Home" method="post">
            <input class="form-control me-2" type="search" placeholder="Buscar..." aria-label="Buscar" name="palabraClave">
            <button class="btn btn-outline-primary" type="submit">Buscar</button>
        </form>        
    </div>
</div>
    <div class="page-container">
    @if (Model != null)
    {
        @foreach (var item in Model)
        {                        
            <a href="@Url.Action("Ventas","Home",new {id = @item.IdLibro})" class="product-container text-decoration-none">
                <img src="@item.Ruta">
                <h3>@item.Titulo</h3>
                <h2>@item.Autor</h2>
                <h4>@item.Genero</h4>
                <h2>@item.Precio</h2>                    
                @*@Html.ActionLink("Comprar","Ventas","Home",new { id = @item.IdLibro},new {@class="btn btn-dark"})                *@
            </a>
        }          
    } else
    {
        <h2>Lo sentimos, no pudimos encontrar este libro :(</h2>
    }
    </div>
    <br><br><br>
    <script src="~/js/popperjs.js" ></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.min.js" integrity="sha384-kjU+l4N0Yf4ZOJErLsIcvOU2qSb74wXpOhqTvwVx3OElZRweTnQ6d31fXEoRD1Jy" crossorigin="anonymous"></script>
</body>
</html>
